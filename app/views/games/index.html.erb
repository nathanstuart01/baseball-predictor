<%= javascript_include_tag "scorepredictor" %>
<%= stylesheet_link_tag "teamstyles" %>

<body class="scorepredictor">
<h3>Today's Games:</h3>

  <% if @games.present? %>

      <% @games.each do |game| %>

        <ul>
          <li> <%= game.away_team %> @ <%= game.home_team %> </li>
            <ul>
              <li> First Pitch: <%= game.game_info.strftime("%l:%M") %> MST </li>
              <br />
              <button id="warCalculationButton">Predicted Winner</button>

              <div id="warResults" class="warModal">
                <div class="warModalContent">
                  <span class="closeModal"></span>
                    <p class="warResults">teamData[0].name, teamData[0].total_war, gameInfo[0].away_team</p>
                </div>
              </div>

            </ul>
        </ul>

    <% end %>
  <% else %>

    <h5> No Games Scheduled For Today</h5>

  <% end %>

    <%= link_to "Team War Info", teams_path %>
</body>
